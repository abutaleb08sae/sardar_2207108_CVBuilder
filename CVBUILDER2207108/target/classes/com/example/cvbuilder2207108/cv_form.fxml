<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CVFormController">
    <top>
        <Label text="Create Your CV" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="150" />
                    <ColumnConstraints minWidth="200" prefWidth="300" />
                </columnConstraints>

                <children>
                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
            </GridPane>

            <VBox spacing="5">
                <Label text="Education:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="educationArea" prefRowCount="3" />
            </VBox>

            <VBox spacing="5">
                <Label text="Skills:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="skillsArea" prefRowCount="3" />
            </VBox>

            <VBox spacing="5">
                <Label text="Work Experience:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="experienceArea" prefRowCount="3" />
            </VBox>

            <VBox spacing="5">
                <Label text="Projects:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="projectsArea" prefRowCount="3" />
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20;">
            <Button fx:id="generateButton" mnemonicParsing="false" onAction="#handleGenerateCV" text="Generate CV" />
        </HBox>
    </bottom>
</BorderPane>