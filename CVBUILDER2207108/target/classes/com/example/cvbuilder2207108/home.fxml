<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomeController">
    <children>
        <Label text="Welcome to CV Builder">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Create your professional CV in minutes" />
        <Button fx:id="createCVButton" mnemonicParsing="false" onAction="#handleCreateCV" text="Create New CV" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>